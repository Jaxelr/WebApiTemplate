<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageType>Template</PackageType>
		<IsPackable>true</IsPackable>
		<Version>1.8.1</Version>
		<PackageId>WebApiTemplate</PackageId>
		<PackageCopyright>2024</PackageCopyright>
		<Title>Dotnet Web Api Template</Title>
		<Authors>Jaxel Rojas</Authors>
		<Description>A simplistic webapi template with controllers using Asp.Net 8</Description>
		<PackageTags>template;web;api</PackageTags>
		<PackageProjectUrl>https://github.com/Jaxelr/WebApiTemplate</PackageProjectUrl>
		<IncludeContentInPack>true</IncludeContentInPack>
		<IncludeBuildOutput>false</IncludeBuildOutput>
		<ContentTargetFolders>Content</ContentTargetFolders>
		<NoDefaultExcludes>true</NoDefaultExcludes>
		<NoWarn>NU5128</NoWarn>
		<PackageReleaseNotes>Upgrade to dotnet 8</PackageReleaseNotes>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="Content\**" Exclude="**\.vs\**;**\bin\**;**\obj\**;**\*.user;**\*.lock.json;**\node_modules\**;**\.vscode\**;*.gitkeep;**\MSBuild_Logs\**" />
		<Compile Remove="**\*" />
		<None Remove="**\MSBuild_Logs\**;**\bin\**;**\obj\**" />
	</ItemGroup>
</Project>
