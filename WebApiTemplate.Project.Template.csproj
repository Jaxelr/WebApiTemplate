<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageType>Template</PackageType>
    <IsPackable>true</IsPackable>
    <Version>1.2.0</Version>
    <PackageId>WebApiTemplate</PackageId>
    <PackageCopyright>2021</PackageCopyright>
    <Title>Dotnet Web Api Template</Title>
    <Authors>Jaxel Rojas</Authors>
    <Description>A minimal alternative webapi template using Asp.Net 5</Description>
    <PackageTags>template;web;api</PackageTags>
    <PackageProjectUrl>https://github.com/Jaxelr/WebApiTemplate</PackageProjectUrl>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>Content</ContentTargetFolders>
    <NoDefaultExcludes>true</NoDefaultExcludes>
    <NoWarn>NU5128</NoWarn>
    <PackageReleaseNotes>Upgrading to latest versions</PackageReleaseNotes>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Content\**" Exclude="**\.vs\**;**\bin\**;**\obj\**;**\*.user;**\*.lock.json;**\node_modules\**;**\.vscode\**;*.gitkeep" />
    <Compile Remove="**\*" />
  </ItemGroup>
</Project>
