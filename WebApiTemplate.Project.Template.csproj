<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageType>Template</PackageType>
		<IsPackable>true</IsPackable>
		<Version>1.6.8</Version>
		<PackageId>WebApiTemplate</PackageId>
		<PackageCopyright>2023</PackageCopyright>
		<Title>Dotnet Web Api Template</Title>
		<Authors>Jaxel Rojas</Authors>
		<Description>A minimal webapi template with controllers using Asp.Net 7</Description>
		<PackageTags>template;web;api</PackageTags>
		<PackageProjectUrl>https://github.com/Jaxelr/WebApiTemplate</PackageProjectUrl>
		<IncludeContentInPack>true</IncludeContentInPack>
		<IncludeBuildOutput>false</IncludeBuildOutput>
		<ContentTargetFolders>Content</ContentTargetFolders>
		<NoDefaultExcludes>true</NoDefaultExcludes>
		<NoWarn>NU5128</NoWarn>
		<PackageReleaseNotes>Upgrade dependencies to latest version, minor template refactors</PackageReleaseNotes>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="Content\**" Exclude="**\.vs\**;**\bin\**;**\obj\**;**\*.user;**\*.lock.json;**\node_modules\**;**\.vscode\**;*.gitkeep;**\MSBuild_Logs\**" />
		<Compile Remove="**\*" />
		<None Remove="**\MSBuild_Logs\**;**\bin\**;**\obj\**" />
	</ItemGroup>
</Project>
